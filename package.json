{
  "name": "transit-arrivals-widget",
  "description": "Build a realtime transit arrival tool from GTFS and GTFS-RT.",
  "version": "1.1.0",
  "keywords": [
    "transit",
    "gtfs",
    "transportation",
    "gtfs-rt"
  ],
  "private": false,
  "author": "Brendan Nee <brendan@blinktag.com>",
  "homepage": "https://github.com/BlinkTagInc/transit-arrivals-widget",
  "bugs": {
    "url": "https://github.com/BlinkTagInc/transit-arrivals-widget"
  },
  "repository": "git://github.com/BlinkTagInc/transit-arrivals-widget",
  "contributors": [
    "Wojciech Kulesza <wojciech.kulesza@goeuropa.eu>"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint app/**/*.js bin/**/*.js lib/**/*.js public/**/*.js",
    "lint-fix": "eslint app/**/*.js bin/**/*.js lib/**/*.js public/**/*.js --fix",
    "test": "eslint app/**/*.js bin/**/*.js lib/**/*.js public/**/*.js",
    "start": "node app"
  },
  "bin": {
    "transit-arrivals-widget": "bin/transit-arrivals-widget.js"
  },
  "type": "module",
  "main": "index.js",
  "dependencies": {
    "chalk": "^5.2.0",
    "copy-dir": "^1.3.0",
    "express": "^4.18.2",
    "gtfs": "^4.3.0",
    "i18n": "^0.15.1",
    "js-beautify": "^1.14.7",
    "lodash-es": "^4.17.21",
    "morgan": "^1.10.0",
    "pretty-error": "^4.0.0",
    "pug": "^3.0.2",
    "sanitize-filename": "^1.6.3",
    "timer-machine": "^1.1.0",
    "toposort": "^2.0.2",
    "untildify": "^4.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3"
  },
  "engines": {
    "node": ">= 14.15.4"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "rules": {
      "camelcase": [
        "error",
        {
          "properties": "never"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    }
  },
  "release-it": {
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md"
      }
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintIgnore": [
    "node_modules/*"
  ]
}
